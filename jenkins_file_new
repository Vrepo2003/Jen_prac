pipeline {
    agent any

    triggers {
        githubPush() // Triggers when PR is merged (push to main)
    }

    stages {
        stage('Build') {
            when {
                branch 'main'
            }
            steps {
                echo "ðŸ”§ Building code after PR merged into main branch"
                // Example: sh 'npm install' or 'mvn clean install'
            }
        }

        stage('Test') {
            when {
                branch 'main'
            }
            steps {
                echo "ðŸ§ª Running tests"
                // Example: sh 'npm test'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "ðŸš€ Deploying application"
                // Example: sh './deploy.sh'
            }
        }
    }
}

